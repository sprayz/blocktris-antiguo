<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActividadMenu" >

    <TextView
        android:id="@+id/tvPuntuaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvSalir"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:onClick="onMenuClick"
        android:text="@string/textoMenuPuntuaciones"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/TextoMenu" />

    <TextView
        android:id="@+id/tvSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:onClick="onMenuClick"
        android:text="@string/textoMenuSalir"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/TextoMenu" />

    <TextView
        android:id="@+id/tvJugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPuntuaciones"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:onClick="onMenuClick"
        android:text="@string/textoMenuJugar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/TextoMenu" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:src="@drawable/logo" />

</RelativeLayout>